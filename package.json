{
  "name": "taiwind",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"npx tailwindcss -i ./src/style.css -o ./src/dist/stylesheet.css --watch\"",
    "build:css": "tailwindcss -i ./src/style.css -o ./dist/style.css --minify",
    "build:ts": "tsc --outDir dist",
    "copy:html": "cp ./pages/*.html ./dist/ || true",
    "copy:img": "cp -r ./src/image ./dist/image || true",
    "build": "npm run build:css && npm run build:ts && npm run copy:html && npm run copy:img"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
