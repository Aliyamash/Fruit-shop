{
  "compilerOptions": {
    /* ------------------ File Layout ------------------ */
    "rootDir": "./src",
    "outDir": "./src",

    /* ------------------ Environment Settings ------------------ */
    "module": "esnext",
    "target": "es6",
    "lib": ["esnext", "dom"],
    "types": [],
    "moduleDetection": "force",

    /* ------------------ Output Options ------------------ */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* ------------------ Type Checking ------------------ */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* ------------------ JSX (for React projects) ------------------ */
    "jsx": "react-jsx",

    /* ------------------ Misc ------------------ */
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "skipLibCheck": true
  },
  "include": ["src", "src/script.js"],
  "exclude": ["node_modules", "dist"]
}
